generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  VIEWER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
  BLOCKED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum RoadmapNodeType {
  STAGE
  TASK
  SUBTASK
  NOTE
  RESOURCE
}

enum LinkType {
  GOOGLE_DOC
  GOOGLE_SHEET
  GOOGLE_SLIDES
  YANDEX_DISK
  OTHER
}

enum KnowledgeVisibility {
  ADMIN_ONLY
  ALL
  ROLE_BASED
}

enum KnowledgeStatus {
  ACTIVE
  DRAFT
  ARCHIVED
}

enum KnowledgePriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  displayName    String
  passwordHash   String
  role           Role            @default(ADMIN)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  tasks          Task[]          @relation("TaskOwner")
  comments       Comment[]
  audits         AuditLog[]
  knowledgeItems KnowledgeItem[] @relation("KnowledgeCreator")
}

model Brand {
  id             String          @id @default(cuid())
  slug           String          @unique
  name           String
  description    String?
  progress       Int             @default(0)
  stages         Stage[]
  roadmapBoards  RoadmapBoard[]
  knowledgeItems KnowledgeItem[]
  launchLayers   LaunchLayer[]
}

model Stage {
  id             String          @id @default(cuid())
  brandId        String
  title          String
  description    String?
  order          Int
  progress       Int             @default(0)
  brand          Brand           @relation(fields: [brandId], references: [id], onDelete: Cascade)
  tasks          Task[]
  knowledgeItems KnowledgeItem[]
}

model Task {
  id           String          @id @default(cuid())
  stageId      String
  parentTaskId String?
  title        String
  description  String?
  status       TaskStatus      @default(TODO)
  priority     TaskPriority    @default(MEDIUM)
  deadline     DateTime?
  progress     Int             @default(0)
  assigneeId   String?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  stage        Stage           @relation(fields: [stageId], references: [id], onDelete: Cascade)
  assignee     User?           @relation("TaskOwner", fields: [assigneeId], references: [id])
  parentTask   Task?           @relation("TaskTree", fields: [parentTaskId], references: [id])
  subtasks     Task[]          @relation("TaskTree")
  comments     Comment[]
  links        KnowledgeItem[]
}

model Comment {
  id        String   @id @default(cuid())
  taskId    String
  authorId  String
  body      String
  createdAt DateTime @default(now())
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  action     String
  entityType String
  entityId   String
  payload    Json?
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])
}

model RoadmapBoard {
  id        String        @id @default(cuid())
  brandId   String
  title     String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  brand     Brand         @relation(fields: [brandId], references: [id], onDelete: Cascade)
  nodes     RoadmapNode[]
}

model RoadmapNode {
  id           String          @id @default(cuid())
  boardId      String
  type         RoadmapNodeType
  label        String
  x            Float
  y            Float
  linkedTaskId String?
  payload      Json?
  board        RoadmapBoard    @relation(fields: [boardId], references: [id], onDelete: Cascade)
}

model KnowledgeItem {
  id            String              @id @default(cuid())
  projectId     String?
  title         String
  url           String
  type          LinkType            @default(OTHER)
  accessHints   String[]
  visibility    KnowledgeVisibility @default(ADMIN_ONLY)
  status        KnowledgeStatus     @default(ACTIVE)
  priority      KnowledgePriority   @default(MEDIUM)
  isFavorite    Boolean             @default(false)
  creatorUserId String
  comment       String?
  stageId       String?
  taskId        String?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  project       Brand?              @relation(fields: [projectId], references: [id], onDelete: SetNull)
  stage         Stage?              @relation(fields: [stageId], references: [id], onDelete: SetNull)
  task          Task?               @relation(fields: [taskId], references: [id], onDelete: SetNull)
  creator       User                @relation("KnowledgeCreator", fields: [creatorUserId], references: [id], onDelete: Cascade)
  itemTags      KnowledgeItemTag[]
}

model Tag {
  id             String             @id @default(cuid())
  name           String             @unique
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  knowledgeItems KnowledgeItemTag[]
}

model KnowledgeItemTag {
  knowledgeItemId String
  tagId           String
  knowledgeItem   KnowledgeItem @relation(fields: [knowledgeItemId], references: [id], onDelete: Cascade)
  tag             Tag           @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([knowledgeItemId, tagId])
}

model UnitCard {
  id          String @id @default(cuid())
  name        String
  avatarColor String
  strength    Int
  speed       Int
  agility     Int
  stamina     Int
  loyalty     Int
  focus       Int
}

model LaunchLayer {
  id          String  @id @default(cuid())
  brandId     String
  title       String
  level       Int
  progress    Int     @default(0)
  description String?
  brand       Brand   @relation(fields: [brandId], references: [id], onDelete: Cascade)
}

model AppSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  updatedAt DateTime @updatedAt
}
